@model Categoria
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Crear Nueva Categoria</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="nombre"></label>
            <input asp-for="nombre" class="form-control"/>
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="order"></label>
            <input asp-for="order" class="form-control" />
            <span asp-validation-for="order" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Añadir</button>
        <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary ml-2">Regresar al Listado</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    } 
}