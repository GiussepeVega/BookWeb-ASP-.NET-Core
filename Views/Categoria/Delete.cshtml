@model Categoria
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePost">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Eliminar Categoria</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Codigo del Producto</label>
            @* aca se puede colocar readonly o disabled para bloquear la caja de texto *@
            <input asp-for="id" class="form-control" readonly/>
        </div>
        <div class="mb-3">
            <label asp-for="nombre"></label>
            
            <input asp-for="nombre" class="form-control" readonly/>
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="order"></label>
            <input asp-for="order" class="form-control" readonly/>
            <span asp-validation-for="order" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Eliminar</button>
        <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary ml-2">Regresar al Listado</a>
    </div>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}